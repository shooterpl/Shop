@model Shop.ViewModels.ProductViewModel

@{
    ViewBag.Title = "Buy";
}

<h4>Do you want to buy @Model.name?</h4>
<INPUT id="spinner" TYPE="NUMBER" MIN="0" MAX="@Model.quantity" STEP="1" VALUE="1" SIZE="6">
<input type="submit" title="Buy" value="Buy" onclick="location.href='@Url.Action("Purchase", "Products", new { name = Model.name})'" />
<input type="submit" title="Cancel" value="Cancel" onclick="location.href='@Url.Action("Index", "Products")'" />

<table>
    <tr id="price">
        <td>Product Price :</td>
        <td>@Html.DisplayFor(modelItem => Model.price)</td>
    </tr>
    <tr>
        <td>Available Quantity :</td>
        <td>@Html.DisplayFor(modelItem => Model.quantity)</td>
    </tr>
    <tr>
        <td>Barcode Number :</td>
        <td>@Html.DisplayFor(modelItem => Model.barcode)</td>
    </tr>
</table>
<br />
<img src="~/Img/@(Model.name).jpg" height="300" />


